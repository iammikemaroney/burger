
    <div class="container">
      
      <br>

      <center>
        <div class="row">
            <h1>Eat Da Burger!</h1>
            <img src="/assets/img/burger.png" width="300"><br>
        </div>
      </center>


<div class="row sect">
       <div class="col-md-2"></div>
       <div class="col-md-8 text-center ip">
           <form class="create-form">
               <div class="form-group">
                   <h4 class="card-title ttl-color"><label for="burgerName">Enter Burger Name: </label></h4>
                   <input type="text" id="new_burger" name="burgerName">
               </div>
               <button type="submit" class="create-form">Add a Burger</button>
           </form>
       </div>
       <div class="col-md-2"></div>
   </div>

   <div class="row">
       <div class="col-md-1"></div>
       <div class="col-md-6 jumbotron bg">
           <ul>
               {{#each burgers}}
               {{#unless devoured}}
               <li>
                   <div class="row">
                       <div class="col-md-6">
                           {{ burger_name }}
                       </div>
                       <div class="col-md-2">
                           <button class="btn devour-button" data-id={{id}} data-status={{devoured}}>Devour It!</button>
                       </div>
                   </div>
               </li>
               {{/unless}}
               {{/each}}
           </ul>
       </div>

       <div class="col-md-4 jumbotron bg">
           <ul>
               {{#each burgers}}
               {{#if devoured}}
               <li>
                   {{ burger_name }}
               </li>
               {{/if}}
               {{/each}}
           </ul>
       </div>
       <div class="col-md-1"></div>
   </div>
</div>
</div>